<mixin>
  <display-name i18n="coreCommonMixin.displayName">Common fields</display-name>
  <description i18n="coreCommonMixin.description">Common fields for content types</description>

  <form>
	  <input name="nextQuestionOrResult" type="ContentSelector">
		  <label>Neste spørsmål eller resultat</label>
		  <occurrences minimum="1" maximum="1" />
		  <config>
			  <allowContentType>question</allowContentType>
			  <allowContentType>result</allowContentType>
			  <allowContentType>result-engine</allowContentType>
		  </config>
	  </input>
  </form>
</mixin>
