<mixin>
	<display-name i18n="coreCommonMixin.displayName">Common fields</display-name>
	<description i18n="coreCommonMixin.description">Common fields for content types</description>

	<form>
		<option-set name="directOrRefAnswers">
			<label i18n="wizardStep.inputType">Svaralternativer</label>
			<occurrences minimum="1" maximum="1" />
			<help-text
				i18n="wizardStep.inputTypeHelpText">Bruk referansesvar dersom du vil bruke svargruppe eller
				oppsummering. Ellers er direktesvar enklest
			</help-text>
			<options maximum="1" minimum="1">
				<option name="direct">
					<label i18n="multiPageForm.radioButtons">Direktesvar</label>
					<default>true</default>
					<items>
						<input name="answers" type="TextLine">
							<label i18n="common.nextStep">Svar som fører til neste spørsmål eller resultat</label>
							<occurrences minimum="1" maximum="0" />
						</input>
					</items>
				</option>

				<option name="reference">
					<label i18n="wizardStep.numbers">Referansesvar</label>
					<items>
						<input name="answers" type="ContentSelector">
							<label>Svar som fører til neste spørsmål eller resultat</label>
							<occurrences minimum="1" maximum="0" />
							<config>
								<allowContentType>answer</allowContentType>
								<allowContentType>answer-group</allowContentType>
							</config>
						</input>
					</items>
				</option>
			</options>
		</option-set>
	</form>
</mixin>
