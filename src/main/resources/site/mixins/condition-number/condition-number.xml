<mixin>
  <display-name i18n="coreCommonMixin.displayName">Betingelse for tall</display-name>

  <form>
    <option-set name="numberCondition">
      <label i18n="">Betingelse for tall-input</label>
      <occurrences minimum="1" maximum="1" />
      <options minimum="1" maximum="1">
        <option name="gt">
          <label i18n="">Større enn</label>
          <help-text i18n="">Større enn, men ikke lik</help-text>
          <items>
            <input name="number" type="Long">
              <label i18n="">Større enn</label>
            </input>
          </items>
        </option>
        <option name="lt">
          <label i18n="">Mindre enn</label>
          <help-text i18n="">Mindre enn, men ikke lik</help-text>
          <items>
            <input name="number" type="Long">
              <label i18n="">Mindre enn</label>
            </input>
          </items>
        </option>
        <option name="between">
          <label i18n="">Mellom</label>
          <items>
            <input name="number" type="Long">
              <label i18n="">Større enn</label>
              <help-text i18n="">Større enn, men ikke lik</help-text>
            </input>
          </items>
          <items>
            <input name="number" type="Long">
              <label i18n="">Mindre enn</label>
              <help-text i18n="">Mindre enn, men ikke lik</help-text>
            </input>
          </items>
        </option>
        <option name="eq">
          <label i18n="">Lik</label>
          <items>
            <input name="number" type="Long">
              <label i18n="">Lik</label>
            </input>
          </items>
        </option>
        <option name="neq">
          <label i18n="">Ulik</label>
          <items>
            <input name="number" type="Long">
              <label i18n="">Ulik</label>
            </input>
          </items>
        </option>
      </options>
    </option-set>
  </form>
</mixin>
