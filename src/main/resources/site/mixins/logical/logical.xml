<mixin>
  <display-name i18n="">Logisk sjekk</display-name>
  <description i18n="">Sjekk om resultatet skal vises med logisk uttrykk</description>

  <form>
    <item-set name="displayCriteria">
      <label>Kriterier for visning</label>
      <help-text>Her settes opp logiske kriterier for n책r dette resultatet skal vises.
        etc: (Hund ELLER Katt) OG Sverige
      </help-text>
      <occurrences minimum="1" maximum="1" />
      <items>
        <input name="logical-operator" type="ComboBox">
          <label>Logisk operator for denne boksen</label>
          <help-text>Gjelder kun dersom du har mer enn ett element i denne boksen</help-text>
          <occurrences minimum="0" maximum="1" />
          <config>
            <option value="and">Alle verdiene m책 oppfylles (OG)</option>
            <option value="or">En av verdiene m책 oppfylles (ELLER)</option>
            <option value="not">Ingen av verdiene m책 oppfylles (IKKE)</option>
          </config>
        </input>
        <option-set name="choiceOrLogic">
          <occurrences minimum="0" maximum="0" />
          <options minimum="1" maximum="1">
            <option name="choice">
              <default>true</default>
              <label>Valg</label>
              <items>
                <mixin name="logical-operator" />
                <input name="choices" type="ContentSelector">
                  <label>Valg</label>
                  <occurrences minimum="1" maximum="0" />
                  <config>
                    <allowContentType>choice</allowContentType>
                    <allowContentType>choice-group</allowContentType>
                  </config>
                </input>
              </items>
            </option>
            <option name="logic">
              <occurrences minimum="1" maximum="0" />
              <label>Logisk uttrykk</label>
              <items>
                <mixin name="logical-operator" />
                <item-set name="logic">
                  <occurrences minimum="1" maximum="0" />
                  <items minimum="1" maximum="1">
                    <mixin name="logical-operator" />
                    <input name="choices" type="ContentSelector">
                      <label>Valg</label>
                      <occurrences minimum="1" maximum="0" />
                      <config>
                        <allowContentType>choice</allowContentType>
                        <allowContentType>choice-group</allowContentType>
                      </config>
                    </input>
                  </items>
                </item-set>
              </items>
            </option>
          </options>
        </option-set>
      </items>
    </item-set>
  </form>
</mixin>
